    private void bt_calcularActionPerformed(java.awt.event.ActionEvent evt) {                                            
  try {
        int quantidadePao = Integer.parseInt(txt_quantidadePao.getText().trim());
        int quantidadeBroa = Integer.parseInt(txt_quantidadeBroa.getText().trim());
        double precoPao = Double.parseDouble(txt_precoPao.getText().trim());
        double precoBroa = Double.parseDouble(txt_precoBroa.getText().trim());

        Padaria padaria = new Padaria(quantidadePao, quantidadeBroa, precoPao, precoBroa);

        double totalDescontado = padaria.calcular();

        txt_totalDescontado.setText(String.format("%.2f", totalDescontado));
    } catch (NumberFormatException e) {
        
    }




    }                                           
    

    


